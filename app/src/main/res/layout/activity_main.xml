<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.guoyang.customview.MainActivity">
    <Button
        android:id="@+id/QQStepView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仿qq计步器"
        android:onClick="QQStepview"/>
    <Button
        android:id="@+id/ColorTrackTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字体变色"
        android:onClick="ColorTrackTextview"/>
    <Button
        android:id="@+id/ProgressBarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度条"
        android:onClick="ProgressBarView"/>
    <Button
        android:id="@+id/ShapeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="58同城加载动画"
        android:onClick="ShapeView"/>
    <Button
        android:id="@+id/RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评分控件"
        android:onClick="RatingBar"/>
    <Button
        android:id="@+id/LetterSideBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字母索引"
        android:onClick="LetterSideBar"/>
    <Button
        android:id="@+id/Laglatyout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流式布局"
        android:onClick="Laglatyout"/>
    <Button
        android:id="@+id/KGSlidingMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仿酷狗侧滑"
        android:onClick="KGSlidingMenu"/>
    <Button
        android:id="@+id/QQSlidingMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仿QQ侧滑"
        android:onClick="QQSlidingMenu"/>

</LinearLayout>

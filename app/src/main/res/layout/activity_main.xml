<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.guoyang.customview.MainActivity">
    <Button
        android:id="@+id/QQStepView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仿qq计步器"
        android:onClick="QQStepview"/>
    <Button
        android:id="@+id/ColorTrackTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字体变色"
        android:onClick="ColorTrackTextview"/>
    <Button
        android:id="@+id/ProgressBarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度条"
        android:onClick="ProgressBarView"/>
    <com.example.guoyang.customview.shapeView.ShapeView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/shape_view"/>
</LinearLayout>
